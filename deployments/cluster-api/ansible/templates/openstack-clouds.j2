    region_name:   "{{ clouds[aglais.openstack.cloud.name].region_name }}"
    interface:     "{{ clouds[aglais.openstack.cloud.name].interface }}"
    identity_api_version: {{ clouds[aglais.openstack.cloud.name].identity_api_version }}
    auth_type:     "{{ clouds[aglais.openstack.cloud.name].auth_type }}"
    verify: false

