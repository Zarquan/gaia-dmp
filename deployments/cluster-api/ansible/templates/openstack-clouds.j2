clouds:
  {{ aglais.openstack.cloud.name }}:
    auth:
      auth_url: "{{ clouds[aglais.openstack.cloud.name].auth.auth_url }}"
      application_credential_id: "{{ clouds[aglais.openstack.cloud.name].auth.application_credential_id }}"
